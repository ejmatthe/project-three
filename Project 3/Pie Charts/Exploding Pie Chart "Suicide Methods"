var pieSizes = [54.6, 11.6, 25.8 ,0, 0]

var pieColors = ["rgb(255,0,0)", "rgb(0,128,0)", "rgb(0,0,255)", "rgb(255,20,147)", "rgb(128,0,128)"]


var data = [{
    values: pieSizes,
    labels: pieLabels,
    type: "pie",
    name: "Pie Chart",
    marker: {
        colors: pieColors

    }}];



